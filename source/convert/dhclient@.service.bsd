[Unit]
Description=%p service for device %i
Wants=%p-log.service
After=%p-log.service wpa_supplicant@%i hostapd@%i
PartOf=netif@%i

[Service]
EnvironmentDirectory=env
ExecStart=%p -d '%I'
RestartSec=10

[Install]
WantedBy=netif@%i
